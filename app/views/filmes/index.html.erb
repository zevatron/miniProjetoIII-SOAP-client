<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Diretor</th>
      <th>Estudio</th>
      <th>Genero</th>
      <th>Anolancamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme[:titulo] %></td>
        <td><%= filme[:diretor] %></td>
        <td><%= filme[:estudio] %></td>
        <td><%= filme[:genero] %></td>
        <td><%= filme[:ano_lancamento] %></td>
        <td><%= link_to 'Show', filme %></td>
        <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
        <td><%= link_to 'Destroy', filme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

